<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/recipeName"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            />

        <Button
            android:id="@+id/editRecipe"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/seeRecipe"
            android:background="@drawable/ic_baseline_edit_note_24"
            />
        <Button
            android:id="@+id/seeRecipe"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_remove_red_eye_24"
            />

        <Button
            android:id="@+id/deleteRecipe"
            android:layout_width="27dp"
            android:visibility="invisible"
            android:clickable="false"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editRecipe"
            android:background="@drawable/ic_baseline_del"
            />

        <TextView
            android:id="@+id/recipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeName"
            android:textSize="16dp"
            ></TextView>

        <TextView
            android:id="@+id/recipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeIngredients"
            android:textSize="16dp"
            ></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>